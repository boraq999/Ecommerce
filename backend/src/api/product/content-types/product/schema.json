{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "product"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "img": {
      "allowedTypes": [
        "images"
      ],
      "type": "media",
      "multiple": true
    },
    "title": {
      "type": "string",
      "required": true
    },
    "price": {
      "type": "decimal",
      "required": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "rating": {
      "required": true,
      "type": "decimal",
      "max": 5,
      "min": 0
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "men",
        "women"
      ],
      "required": true
    }
  }
}
